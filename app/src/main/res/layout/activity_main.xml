        <Button
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:textSize="32sp"
            android:layout_weight="1"
            android:text="7" />
        <Button
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="90dp"
            android:layout_height="90dp"
